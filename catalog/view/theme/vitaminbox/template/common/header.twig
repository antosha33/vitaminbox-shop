<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
	<html
	dir="{{ direction }}" lang="{{ lang }}"> <!--<![endif]-->
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{ title }}</title>
		<base href="{{ base }}"/>
		{% if description %}
			<meta name="description" content="{{ description }}"/>
		{% endif %}
		{% if keywords %}
			<meta name="keywords" content="{{ keywords }}"/>
		{% endif %}
		<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
		<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen"/>
		<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
		<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
		{% for style in styles %}
			<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
		{% endfor %}
    <link href="catalog/view/theme/vitaminbox/stylesheet/stylesheet.css" rel="stylesheet">
    <link href="catalog/view/javascript/jquery/magnific/magnific-popup.css" rel="stylesheet">
    <link href="catalog/view/theme/vitaminbox/stylesheet/mfp-zoom-in.css" rel="stylesheet">
		{% for script in scripts %}
			<script src="{{ script }}" type="text/javascript"></script>
		{% endfor %}
		<script src="catalog/view/javascript/jquery/magnific/jquery.magnific-popup.min.js" type="text/javascript"></script>
		<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
    
		{% for link in links %}
			<link href="{{ link.href }}" rel="{{ link.rel }}"/>
		{% endfor %}
		{% for analytic in analytics %}
			{{ analytic }}
		{% endfor %}
	</head>

	<body>
		<header>
			<div class="container">
				<div class="row">
					<div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
						<div id="logo">
							{% if logo %}
								<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive"/></a>
							{% else %}
								<h1>
									<a href="{{ home }}">{{ name }}</a>
								</h1>
							{% endif %}
						</div>
					</div>
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 col-sm-push-6 cart-relative-desable">
            <div class="cart-search">
  						<div class="search-button"><i class="fa fa-search" aria-hidden="true"></i></div>
						  <div class="header-cart">{{ cart }}</div>          
            </div>
					</div>
					<div class="col-lg-6 col-md-6 col-sm-6 col-xs-2 col-sm-pull-3">
            <nav id="menu" class="navbar">
              <div class="navbar-header"><span class="toggle-top-text hidden-lg hidden-md hidden-sm"></span>
                <button type="button" class="btn btn-navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse"><i class="fa fa-bars"></i></button>
              </div>
              <div class="collapse navbar-collapse navbar-ex1-collapse">
						  {% if informations %}
								<ul class="nav navbar-nav list-unstyled header-articles">
                      <a href="{{ home }}"><p>ГЛАВНАЯ</p></a>
                      <a href="ekzoticheskie-frukty/"><p>КАТАЛОГ</p></a>
									{% for information in informations %}
											<a href="{{ information.href }}"><p>{{ information.title }}</p></a>
									{% endfor %}
                      <a href="{{ contact }}">КОНТАКТЫ</a>
							</ul>
              {% endif %}
            </div>
          </nav>
				</div>

				</div>
            <div class="row">
            <div class="col-lg-6 col-lg-offset-3 search-place bounce">
            {{search}}
            </div>     
          </div>
			</div>
		</header>
		{{ menu }}
		<script>

			const searchFront = () => {

      }

      const searchButton = document.querySelector('.search-button');
      const place = document.querySelector('.search-place');
      const elem = document.createElement(`div`);

      elem.innerHTML = `{{search}}`;
      searchButton.addEventListener('click', () => {

      const test = getComputedStyle(document.querySelector('#search.input-group'));
      if(test.display === 'none'){
        
				document.querySelector('#search.input-group').classList.add('animated');
        document.querySelector('#search.input-group').classList.add('fadeIn');
        document.querySelector('#search.input-group').classList.add('faster');
				document.querySelector('#search.input-group').style.display = 'block';
      }else{
        document.querySelector('#search.input-group').style.display = 'none';
      }


      if (!document.querySelector('#search.input-group')) {
        
      } else {
      
      } 
      
      searchFront();
      });


    const navToggleHandler = () => {
      const menuwrapper = document.querySelector('.collapse.navbar-collapse');
      const menu = document.querySelector('.nav.navbar-nav.list-unstyled.header-articles');
      menu.classList.add('animated');
      menu.classList.add('fadeIn');
      menu.classList.add('faster');
      if(menuwrapper.querySelector('.nav.navbar-nav.list-unstyled.header-articles')){
      const newMenu = document.createElement('div');
      newMenu.classList.add('container');
      newMenu.innerHTML='<div class="row"></div>'
      newMenu.childNodes[0].append(menu.cloneNode(true));
      const aimToPaste = document.querySelector('header');
      aimToPaste.append(newMenu);
      menu.remove();
      }else{
         menu.style.display == 'none' ? menu.style.display = 'block':  menu.style.display = 'none';
      }

    }

    const navToggle = document.querySelector('.btn.btn-navbar.navbar-toggle');
    navToggle.addEventListener('click', navToggleHandler);

		</script>
	</body>
</html></body></html>
